<body class="homepage">

<header id="header">
    <!--/.top-bar-->

    <nav class="navbar navbar-inverse" role="banner">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{% if app.user %}{{ path('homepage') }}{% else %}{{ path('fos_user_security_login') }}{% endif %}">
                    <span class="first-part">
                        {% trans %}Drive{% endtrans %}
                    </span>
                    <span class="second-part">{% trans %}Book{% endtrans %}</span>
                    <span class="third-part">{% trans %}In{% endtrans %}</span>
                </a>
            </div>

            <div class="collapse navbar-collapse navbar-right">
                {{ include('menu/profile_menu.html.twig', { 'article': 'article' }) }}
            </div>
        </div>
        <!--/.container-->
    </nav>
    <!--/nav-->

</header>
<!--/header-->


<section id="content">
    <div class="container">
        {% block body %}must be content{% endblock %}
    </div>
    <!--/.container-->
</section>
<!--/#content-->


