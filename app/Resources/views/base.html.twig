<footer id="footer" class="midnight-blue">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                &copy; 2017
                All Rights Reserved.
            </div>
            <div class="col-sm-6">
                <ul class="pull-right">
                    <li>
                        <a href="{% if app.user %}{{ path('fos_user_profile_edit') }}{% else %}{{ path('fos_user_security_login') }}{% endif %}">Home</a>
                    </li>
                    {% if app.user %}
                        <li class="{% if app.request.attributes.get('_route') in ['fos_user_profile_edit'] %}active{% endif %}">
                            <a href="{{ path('fos_user_profile_edit') }}">{% trans %}My Profile{% endtrans %}</a>
                        </li>
                        <li class="{% if app.request.attributes.get('_route') == 'book' %}active{% endif %}">
                            <a href="{{ path('book') }}">{% trans %}All books{% endtrans %}</a>
                        </li>
                        <li class="{% if app.request.attributes.get('_route') == 'shelf' %}active{% endif %}">
                            <a href="{{ path('shelf') }}">{% trans %}All shelfs{% endtrans %}</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
</footer>
<!--/#footer-->

<script>
    PROJECT_URLS = {
        'book_search_google': '{{ path('book_search_google') }}'
    }
</script>
<script type="text/javascript" src="https://maps.google.com/maps/api/js?key={{ parameters.google_api_key }}&libraries=places"></script>
<script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
<script>tinymce.init({selector: 'textarea'});</script>

{% block javascripts %}
