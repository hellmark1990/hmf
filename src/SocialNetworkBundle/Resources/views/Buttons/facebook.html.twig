<!-- Sharingbutton Facebook -->
<a class="resp-sharing-button__link" id="shareBtnFB" target="_blank" aria-label="">
    <div class="resp-sharing-button resp-sharing-button--facebook resp-sharing-button--small">
        <div aria-hidden="true" class="resp-sharing-button__icon resp-sharing-button__icon--solid">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z"/>
            </svg>
        </div>
    </div>
</a>

<script>
    window.fbAsyncInit = function() {
        FB.init({
            appId            : '{{ params.apiKey }}',
            autoLogAppEvents : true,
            xfbml            : true,
            version          : 'v2.9'
        });
        FB.AppEvents.logPageView();
    };

    (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

    (function(d){
        d.getElementById('shareBtnFB').onclick = function() {
            FB.ui({
                method: 'share_open_graph',
                action_type: 'og.shares',
                display: 'popup',
                href: '{{ params.url }}',
                action_properties: JSON.stringify({
                    object : {
                        'og:url': '{{ params.url }}',
                        'og:title': '{{ params.title }}',
                        'og:description': '{{ params.description }}',
                        'og:image:url': '{{ params.image.url }}',
                        'og:image:width': '{{ params.image.width }}',
                        'og:image:height': '{{ params.image.height }}',
                    }
                })
            }, function(response){});
        }
    }(document))
</script>