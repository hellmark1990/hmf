{% extends "BookBundle::layout.html.twig" %}

{% block body -%}
    {{ parent() }}
    <h1 class="h1-title">{% trans %}Read editing{% endtrans %}</h1>

    <div class="pull-right book-top-controls">
        <a href="{{ path('book_reading', {'id': entity.book.id}) }}" class="btn btn-default">
            <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
            {% trans %}Reading{% endtrans %}
        </a>
        <a href="{{ path('book_edit', {'id': entity.book.id}) }}" class="btn btn-default">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            {% trans %}Edit Book{% endtrans %}
        </a>
    </div>

    {{ form_start(form, {'action': path('read_book_update', {'id': entity.id, 'bookId': entity.book.id}), 'method': 'PUT'}) }}

    <div class="form-group">
        <label class="col-sm-2 control-label"></label>

        <div class="col-sm-10">
            <div class="read-location-map location-map location-map-edit"></div>
        </div>
    </div>

    {{ form_row(form.title) }}
    {{ form_row(form.place) }}

    <div class="datepicker-container form-group">
        {{ form_label(form.timeStart) }}
        <div class="col-sm-4">
            {{ form_errors(form.timeStart) }}
            <div class='input-group date' id='datetimepicker6'>
                {{ form_widget(form.timeStart) }}
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>

        {{ form_label(form.timeEnd) }}
        <div class="col-sm-4">
            {{ form_errors(form.timeEnd) }}
            <div class='input-group date ' id='datetimepicker7'>
                {{ form_widget(form.timeEnd) }}
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {% javascripts '@BookBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}