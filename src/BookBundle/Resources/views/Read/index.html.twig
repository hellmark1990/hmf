{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Read list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Place</th>
                <th>Timestart</th>
                <th>Timeend</th>
                <th>Comment</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('read_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.place }}</td>
                <td>{% if entity.timeStart %}{{ entity.timeStart|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.timeEnd %}{{ entity.timeEnd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.comment }}</td>
                <td>{{ entity.title }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('read_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('read_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('read_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
