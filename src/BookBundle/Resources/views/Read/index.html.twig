{% extends "BookBundle::layout.html.twig" %}

{% block body -%}     {{ parent() }}
    <h2>{% trans %}Your Books Reads list{% endtrans %}</h2>

    <div class="books-button-panel">
        <a class="btn btn-success pull-left" href="{{ path('read_new') }}">
            {% trans %}Add book read{% endtrans %}
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover records_list">
            <thead>
            <tr>
                <th>Title</th>
                <th>Place</th>
                <th>Timestart</th>
                <th>Timeend</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% if entities %}
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('read_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                        <td>{{ entity.place }}</td>
                        <td>{% if entity.timeStart %}{{ entity.timeStart|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if entity.timeEnd %}{{ entity.timeEnd|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.comment }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('read_show', { 'id': entity.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('read_edit', { 'id': entity.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr class="info">
                    <td colspan="7">
                        <br>
                        <span>
                            <h4>
                                {% trans %} Your Books list is empty.{% endtrans %}
                            </h4>
                        </span>
                        <br>
                    </td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}
