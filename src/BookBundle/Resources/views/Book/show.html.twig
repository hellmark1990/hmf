{% extends "BookBundle::layout.html.twig" %}

{% block body -%}     {{ parent() }}
    <h1>Book</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Publisher</th>
                <td>{{ entity.publisher }}</td>
            </tr>
            <tr>
                <th>Publisheddate</th>
                <td>{{ entity.publishedDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Pagecount</th>
                <td>{{ entity.pageCount }}</td>
            </tr>
            <tr>
                <th>Printedpagecount</th>
                <td>{{ entity.printedPageCount }}</td>
            </tr>
            <tr>
                <th>Imageurl</th>
                <td>{{ entity.imageUrl }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ entity.language }}</td>
            </tr>
            <tr>
                <th>Previewlink</th>
                <td>{{ entity.previewLink }}</td>
            </tr>
            <tr>
                <th>Readerlink</th>
                <td>{{ entity.readerLink }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('book') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('book_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
