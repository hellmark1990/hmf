{% extends "BookBundle::layout.html.twig" %}

{% block body -%}     {{ parent() }}
    <h1 class="h1-title">Book creation</h1>

    <div class="pull-right book-top-controls">
        <button class="btn btn-default btn-submit-form">
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
            {% trans %}Create{% endtrans %}
        </button>
    </div>

    {{ form_start(form, { 'action': path('book_create') }) }}
    <div class="book-create-form-container">
        <div class="pull-left">
            {{ form_row(form.image) }}
        </div>
        <div class="pull-right">
            {{ form_row(form.name) }}
            {{ form_row(form.authors) }}
            {{ form_row(form.publisher) }}
            {{ form_row(form.readerLink) }}
            {{ form_row(form.previewLink) }}
        </div>
        <div class="form-container">
            {{ form_row(form.publishedDate) }}
            {{ form_row(form.pageCount) }}
            {{ form_row(form.language) }}
        </div>
        <div class="clear-float"></div>
    </div>
    {{ form_end(form) }}
    <p id="book_name_search_result"></p>

{% endblock %}