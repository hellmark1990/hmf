{% extends "BookBundle::layout.html.twig" %}

{% block body -%}     {{ parent() }}
    <h1 class="h1-title">{% trans %}Your Books Shelf list{% endtrans %}</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover records_list">
            <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Access</th>
                <th>Books in shelf</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            {% if entities %}
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('shelf_edit', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                        <td>{{ entity.description|truncate(50)|raw }}</td>
                        <td>{{ entity.accessName }}</td>
                        <td>{{ entity.books.count }}</td>
                        <td>
                            {{ form(deleteForms[entity.id]) }}
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr class="info">
                    <td colspan="7">
                        <br>
                        <span>
                            <h4>
                                {% trans %} Your Books list is empty.{% endtrans %}
                            </h4>
                        </span>
                        <br>
                    </td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}
