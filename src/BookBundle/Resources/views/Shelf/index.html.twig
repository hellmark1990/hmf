{% extends '::base.html.twig' %}

{% block body -%}
    <h2>{% trans %}Your Books Shelf list{% endtrans %}</h2>

    <div class="books-button-panel">
        <a class="btn btn-success pull-left" href="{{ path('shelf_new') }}">
            {% trans %}Add shelf{% endtrans %}
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover records_list">
            <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Access</th>
                <th>Deleted</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% if not entities %}
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('shelf_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                        <td>{{ entity.description }}</td>
                        <td>{{ entity.access }}</td>
                        <td>{{ entity.deleted }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('shelf_show', { 'id': entity.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('shelf_edit', { 'id': entity.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr class="info">
                    <td colspan="7">
                        <br>
                        <span>
                            <h4>
                                {% trans %} Your Books list is empty.{% endtrans %}
                            </h4>
                        </span>
                        <br>
                    </td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}
