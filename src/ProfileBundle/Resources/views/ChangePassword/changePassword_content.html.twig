{% trans_default_domain 'FOSUserBundle' %}

<div id="sticky" class="well well-sm">
    <div class="top-panel-content container">
        <div class="center">
            <h1>{% trans %}Change password{% endtrans %}</h1>
        </div>
    </div>
</div>

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
<div class="form-container control-block">
    {% if app.request.query.get("success") %}
        <div class="alert alert-success" role="alert">{% trans %}Password successfully changed.{% endtrans %}</div>
    {% endif %}

    <div class="form-group">
        <label class="col-sm-2 control-label required" for="fos_user_change_password_form_current_password">{% trans %}Current
            password{% endtrans %}</label>
        <div class="col-sm-10">
            <input type="password" id="fos_user_change_password_form_current_password" name="fos_user_change_password_form[current_password]" required="required" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label required" for="fos_user_change_password_form_plainPassword_first">{% trans %}New
            password{% endtrans %}</label>
        <div class="col-sm-10">
            <input type="password" id="fos_user_change_password_form_plainPassword_first" name="fos_user_change_password_form[plainPassword][first]" required="required" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-7 control-label required" for="fos_user_change_password_form_plainPassword_second">Repeat
            new password</label>
        <div class="col-sm-10">
            <input type="password" id="fos_user_change_password_form_plainPassword_second" name="fos_user_change_password_form[plainPassword][second]" required="required" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary" value="{{ 'change_password.submit'|trans }}"/>
        </div>
    </div>
</div>
{#{{ form_end(form) }}#}
{% trans_default_domain 'FOSUserBundle' %}