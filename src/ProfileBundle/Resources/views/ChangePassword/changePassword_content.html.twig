{% trans_default_domain 'FOSUserBundle' %}

<h1 class="h1-title">{% trans %}Change password{% endtrans %}</h1>

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
<div class="form-container">
    {% if app.request.query.get("success") %}
        <div class="alert alert-success" role="alert">{% trans %}Password successfully changed.{% endtrans %}</div>
    {% endif %}

    {{ form_widget(form) }}

    <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input type="submit" class="btn btn-default" value="{{ 'change_password.submit'|trans }}"/>
        </div>
    </div>
</div>
{{ form_end(form) }}
{% trans_default_domain 'FOSUserBundle' %}