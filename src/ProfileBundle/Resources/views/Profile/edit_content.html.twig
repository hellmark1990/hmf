{% trans_default_domain 'FOSUserBundle' %}

<ul class="nav nav-pills">
    <li class="active"><a href="{{ path('fos_user_profile_edit') }}">Profile</a></li>
    <li><a href="{{ path('book') }}">Books</a></li>
    <li><a href="{{ path('shelf') }}">Shelfs</a></li>
    <li><a href="{{ path('read') }}">Reads</a></li>
</ul>

<br>
<h2>{% trans %}Your Profile{% endtrans %}</h2>

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
<div class="profile-edit-form-container">
    <div class="pull-left">
        {{ form_row(form.avatar) }}
    </div>
    <div class="pull-right">
        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.phone) }}
        <div class="social-container">
            <div class="pull-left social">
                {{ form_row(form.vk) }}
            </div>
            <div class="pull-left social">
                {{ form_row(form.facebook) }}
            </div>
            <div class="pull-left social">
                {{ form_row(form.twitter) }}
            </div>
        </div>
    </div>
    <div class="form-container">
        {{ form_row(form.about) }}
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input type="submit" class="btn btn-default" value="{{ 'profile.edit.submit'|trans }}"/>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}