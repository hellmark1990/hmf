{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<h2 class="h1-title">{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</h2>
    {% if targetUrl %}
    <h1 class="h1-title"><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></h1>
    {% endif %}
{% endblock fos_user_content %}
