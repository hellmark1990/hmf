{% trans_default_domain 'FOSUserBundle' %}

<div class="center">
    <h1 class="h1-title">{% trans %}Sign up{% endtrans %}</h1>
</div>

<form name="contact-form" method="post" action="{{ path('fos_user_registration_register') }}">
    <div class="col-sm-5 col-sm-offset-1">
        <div class="form-group">
            <label>Name *</label>
            <input type="text" name="fos_user_registration_form[username]" class="form-control" required="required">
        </div>
        <div class="form-group">
            <label>Email *</label>
            <input type="email" name="fos_user_registration_form[email]" class="form-control" required="required">
        </div>
        <div class="form-group">
            <label>Password *</label>
            <input type="password" name="fos_user_registration_form[plainPassword][first]" class="form-control">
        </div>
        <div class="form-group">
            <label>Repeat password *</label>
            <input type="password" name="fos_user_registration_form[plainPassword][second]" class="form-control">
        </div>
        <div class="form-group">
            <label>Phone</label>
            <input type="number" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" name="submit" class="btn btn-primary btn-lg" required="required">{% trans %}Sign up{% endtrans %}
            </button>
        </div>
        <input type="hidden" id="fos_user_registration_form__token" name="fos_user_registration_form[_token]" value="{{ csrf_token('registration') }}">
    </div>
</form>
