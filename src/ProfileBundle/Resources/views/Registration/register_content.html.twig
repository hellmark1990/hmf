{% trans_default_domain 'FOSUserBundle' %}

<div id="sticky" class="well well-sm">
    <div class="top-panel-content container">
        <div class="center">
            <h1>{% trans %}Sign up{% endtrans %}</h1>
        </div>
    </div>
</div>

<form class="registration-form col-sm-5 form-horizontal" method="post" action="{{ path('fos_user_registration_register') }}">
    <div class="control-block">
        <div class="form-group">
            <label class="col-sm-3 control-label required" for="bookbundle_shelf_title">Name</label>
            <div class="col-sm-9">
                {{ form_errors(form.username) }}
                <input type="text" name="fos_user_registration_form[username]" class="form-control" required="required">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label required" for="bookbundle_shelf_title">Email</label>
            <div class="col-sm-9">
                {{ form_errors(form.email) }}
                <input type="email" name="fos_user_registration_form[email]" class="form-control" required="required">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label required" for="bookbundle_shelf_title">Password</label>
            <div class="col-sm-9">
                {{ form_errors(form.plainPassword) }}
                <input type="password" name="fos_user_registration_form[plainPassword][first]" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-7 control-label required" for="bookbundle_shelf_title">Repeat password</label>
            <div class="col-sm-9">
                {{ form_errors(form.plainPassword) }}
                <input type="password" name="fos_user_registration_form[plainPassword][second]" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-9">
                <input type="submit" name="_submit" class="btn btn-primary" value="{% trans %}Sign up{% endtrans %}">
            </div>
        </div>

        <input type="hidden" id="fos_user_registration_form__token" name="fos_user_registration_form[_token]" value="{{ csrf_token('registration') }}">
    </div>
</form>
